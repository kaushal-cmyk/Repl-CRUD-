@model IEnumerable<Student>;




<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Student List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Student" asp-action="Create" class="btn btn-primary rounded-1 h-10" style="line-height: 0.8">
				<i class="bi bi-plus-circle"></i> &nbsp;Add Student
			</a>
		</div>
	</div>
	</br><br />

	<table class="table table-bordered table-striped" style="width: 100%;">
		<thead>
			<tr>
				<th>Name</th>
				<th>Address</th>
				<th>Date Of Birth</th>
				<th>Department</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>@obj.Name</td>
					<td>@obj.Address</td>
					<td>@obj.DateOfBirth.ToString("yyyy-MM-dd")</td>
					<td>@obj.Department</td>
					<td>@obj.Email</td>
					<td>
						<div role="group" class="w-60 btn-group">
							<a asp-controller="Student" asp-action="EditStudent" asp-route-id="@obj.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
							<a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@obj.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

